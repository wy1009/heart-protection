{
  "name": "Heart Protection",
  "description": "评论屏蔽器",
  "manifest_version": 2,
  "version": "0.2",
  "homepage_url": "https://wy1009.github.io/",
  "icons": {
    "48": "icon.svg",
    "96": "icon.svg"
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "*://my.jjwxc.net/backend/novelcomment.php?action=getcommentlist"
  ],
  "background": {
    "scripts": [
      "backgrounds/requestFilter.js"
    ]
  },
  "browser_action": {
    "browser_style": true,
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "icon.svg",
      "32": "icon.svg"
    }
  }
}
